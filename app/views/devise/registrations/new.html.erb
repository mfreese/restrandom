<div class="container-fluid">
    <div class="row grad">
        <div class="col-sm-8 imageSu">
            <br /> <br />
            <div>
                <h1 class="fontColorShadowMain fontCenter font100">Restaurant</h1>
                <h1 class="fontColorShadowMain fontCenter font100">Randomizer</h1>
            </div>
            <br /> <br /> <br /> <br /> <br /> <br /> <br />
            <div>
                <h1 class="fontColorShadowMain fontCenter">Sign up, show you CAN decide things!</h1>
            </div>
        </div>

        <div class="col-sm-4 fontCenter">
            <h2 class="fontColorShadowSide">Sign Up</h2>
            <br />
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                    <h3 class="fontColorShadowSide">Email</h3>
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'yourname@mail.com' %>
                    <h3 class="fontColorShadowSide">Address</h3>
                    <div class="form-group">
                        <%= f.input :address, required: true, autofocus: true, label: false, placeholder: 'Street City State Zip' %>
                        </div>
                    <h3 class="fontColorShadowSide">Password</h3>
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: 'Notpassword' %>
                    <h3 class="fontColorShadowSide">Password Again</h3>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Notpassword' %>
              </div>
              <br />
              <br />
              <div class="form-actions fontColorShadowSide">
                <%= f.button :submit, "Sign up", class: 'btn btn-outline btn-lg btn-success' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
