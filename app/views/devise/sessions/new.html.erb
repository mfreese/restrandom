<div class="container-fluid">
    <div class="row liGrad">
        <div class="col-sm-8 liImage">
            <div>
                <img src="../img/logoTest2.svg" alt="Logo" class="liLogo center-block">
                <h1 class="liWhiteAndShadow liCenter liFont">Restaurant</h1>
                <h1 class="liWhiteAndShadow liCenter liFont">Randomizer</h1>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <div>
                <h1 class="liWhiteAndShadow liCenter">Stop not deciding about food...stop it!</h1>
            </div>
        </div>
        <div class="col-sm-4 liCenter liWhiteAndShadow">
            <h2>Log In</h2>
            <br />
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                  <h3>Email</h3>
                <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'yourname@mail.com' %>
                    <h3>Password</h3>
                <%= f.input :password, required: false, label: false, placeholder: 'Notpassword' %>
                <br />
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
                <br />
                <br />
              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

        </div>
    </div>
</div>
